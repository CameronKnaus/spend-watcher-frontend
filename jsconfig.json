{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "checkJs": false,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}